---
import "../styles/style.css";
import ButtonOverview from "../components/ButtonOverview.astro";
import Cards from "../components/Cards.astro";
import CardsHeadliner from "../components/CardsHeadliner.astro";
import Scroll from "../components/Scroll.astro";
import MainLayout from "../components/layouts/MainLayout.astro";

const data = await fetch("https://oqzgzaeevuolneixguaw.supabase.co/rest/v1/artist", {
  method: "GET",
  headers: { apikey: "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Im9xemd6YWVldnVvbG5laXhndWF3Iiwicm9sZSI6ImFub24iLCJpYXQiOjE3MTA2MDQyNDQsImV4cCI6MjAyNjE4MDI0NH0.Qbj4-BVvOnlAroDN44rKnJaPILmiSdhtvARYZEbJrkA" },
}).then((res) => res.json());

let headlineCounter = 0;
---

<MainLayout title="LINEUP">
  <section class="headliner">
    <div class="festival_overblik">
      <p class="opening">22~24 August 2024 Karrusel</p>
      <h1 class="artist_overskrift">ARTISTS</h1>
      <p class="lineup_beskrivelse">
        Here you can get an overview of the diffrerent artists whoâ€™re gonna be playing at Karrusel in 2024. <br />
        The list of artists will be updated continously, as more artists will be revealed.
      </p>
    </div>
    <div class="stage">
      3 <span class="days">days</span>
      <br />
      <span class="slash">/</span>
      <br />
      3 <span class="days">stages</span>
      <br />
      <span class="slash">/</span>
      <br /> 44 <span class="days">artists</span>
    </div>
    <div class="stage_2">
      3 <span class="days">days </span>
      <span class="slash">/ </span> 3 <span class="days">stages </span>
      <span class="slash">/ </span> 44 <span class="days">artists </span>
    </div>
    <div class="headline_bgr">
      <img src="/webp/lineup/headlineup_bgr.webp" alt="background_img" />
      <div class="headline headliner_list">
        {
          data.map((artist) => {
            if (artist.headliner) {
              headlineCounter++;
              return <CardsHeadliner data={artist} className={`head_${headlineCounter}`} />;
            }
          })
        }
      </div>
      <div class="filtering">
        <ButtonOverview variant="secondary" class="disco"> DISCO </ButtonOverview>
        <ButtonOverview variant="secondary" class="house"> HOUSE </ButtonOverview>
        <ButtonOverview variant="secondary" class="techno"> TECHNO </ButtonOverview>
      </div>
      <section class="list">
        {
          data.map((artist) => {
            if (artist.headliner == false) {
              return <Cards data={artist} />;
            }
          })
        }
      </section>
    </div>
    <Scroll />
  </section>
</MainLayout>

<style>
  .headline_bgr {
    display: flex;
    flex-flow: column wrap;
    justify-content: center;
    position: relative;
    max-width: 100%;
    padding: 80px 0;
    height: auto;
    align-items: center;
    margin: 0 auto;
  }

  .headline_bgr img {
    padding-bottom: 40px;
  }
  .headline {
    display: flex;
    position: absolute;
    flex-flow: column wrap;
    justify-content: center;
    padding: 20px;
    top: 0;
    left: 34%;
    margin: 0 auto;
    transform: translate(-50%, 50%);
  }
  .list {
    max-width: 1600px;
    display: flex;
    flex-flow: wrap;
    margin: auto;
    gap: 40px;
    justify-content: center;
    padding-bottom: 100px;
  }
  .filtering {
    display: flex;
    flex-flow: wrap;
    margin: auto;
    justify-content: flex-start;
    gap: 40px;
    padding: 40px 0;
    max-width: 1300px;
  }
  .festival_overblik {
    display: flex;
    flex-flow: wrap column;
    place-content: center;
    text-align: center;
    width: 100%;
    padding: 80px 0;
    position: relative;
  }
  h1 {
    background-image: url(../webp/lineup/mask_artist.webp);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    --webkit-background-repeat: no-repeat;
    background-size: cover;
  }
  .lineup_beskrivelse {
    width: 50%;
    line-height: 20px;
    padding-top: 20px;
  }
  .stage {
    color: #f84104;
    font-family: "Abhaya Libre", serif;
    font-weight: 600;
    font-style: normal;
    font-size: 40px;
    margin-left: 65px;
    position: absolute;
    top: 160px;
  }
  .stage_2 {
    display: none;
  }
  .days {
    font-size: 20px;
  }
  .slash {
    color: #7000ff;
    font-size: 25px;
  }

  @media (max-width: 700px) {
    .festival_overblik {
      padding: 80px 0 40px 0;
    }
    .stage_2 {
      color: #f84104;
      font-family: "Abhaya Libre", serif;
      font-weight: 600;
      font-style: normal;
      font-size: 40px;
      position: absolute;
      top: 10%;
      left: 50%;
      transform: translate(-50%, -50%);
      display: flex;
      align-items: end;
    }
    .headline {
      top: 92px;
      left: 34%;
    }
    .filtering {
      margin-top: 26%;
    }
    .stage {
      display: none;
    }
  }

  @media (max-width: 500px) {
    .headline_bgr img {
      width: 100%;
      padding-bottom: 92px;
    }
    .filtering {
      padding-top: 35%;
      justify-content: center;
    }
    .headline {
      top: 1%;
      left: 31%;
    }
  }
  @media (max-width: 320px) {
    .filtering {
      padding-top: 90%;
    }
    .lineup_beskrivelse {
      width: 100%;
      line-height: 20px;
      padding: 20px;
    }
    .headline_bgr img {
      width: 100%;
      margin: 0 auto;
    }
    .headline {
      top: 1%;
      left: 20%;
      margin: 0 auto;
      transform: translate(-50%, 50%);
    }

    .stage_2 {
      color: #f84104;
      font-family:
        Abhaya Libre,
        serif;
      font-weight: 600;
      font-style: normal;
      font-size: 40px;
      position: absolute;
      top: 13%;
      left: 50%;
      transform: translate(-50%, -50%);
      display: flex;
      align-items: end;
    }
    .filtering {
      margin-top: 120px;
    }
    .stage {
      display: none;
    }
  }
</style>
