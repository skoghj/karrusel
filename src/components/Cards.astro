---
const { data } = Astro.props;
import ButtonOverview from "../components/ButtonOverview.astro";
---

<head>
  <link href="https://fonts.googleapis.com/css2?family=Alumni+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet" />
</head>
<body>
  <article>
    <div class="card-container">
      <img src={data.image} alt={data.name} />
      <div class="navn">
        <h2 class="name">{data.name}</h2>
        <a href=`artists/${data.id}`>
          <div class="button_list">
            <ButtonOverview variant="primary"> See more </ButtonOverview>
          </div>
        </a>
      </div>
      <div class="date_land">
        <div class="date">{data.date}</div>
        <div class="land">{data.land}</div>
      </div>
    </div>
  </article>
</body>

<style>
  .card-container {
    width: 280px;
    height: auto;
    display: flex;
    position: relative;
    height: auto;
    gap: 40px;
    transition: 1s;
  }
  .card-container:hover {
    transform: scale(1.1);
    z-index: 2;
  }

  img {
    display: flex;
    position: relative;
    width: 280px;
    height: 330px;
    border-radius: 20px;
    object-fit: cover;
  }

  .navn {
    position: absolute;
    display: flex;
    justify-content: space-around;
    bottom: 0;
    width: 280px;
    border-radius: 0 0 20px 20px;
    padding: 10px 20px;
    align-items: center;
    background-color: #fff3ec;
    font-family: "Alumni Sans", sans-serif;
  }
  .button_list {
    align-self: flex-end;
  }
  .name {
    inline-size: 187px;
    justify-content: center;
    overflow-wrap: break-word;
    font-family: "Alumni Sans", sans-serif;
    font-optical-sizing: auto;
    font-weight: bold;
    font-style: normal;
    font-size: 35px;
    font-weight: 800;
    color: #1a0202;
  }
  .date_land {
    display: flex;
    color: #4f4848;
    position: absolute;
    font-family: "Alumni Sans", sans-serif;
    font-weight: 600;
    font-size: 20px;
    justify-content: space-between;
    width: 280px;
    padding: 10px 20px;
  }
</style>
